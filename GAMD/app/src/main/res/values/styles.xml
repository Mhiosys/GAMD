<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeContent" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gamdPrimaryColor</item>
        <item name="colorPrimaryDark">@color/gamdPrimaryDark</item>
        <item name="colorAccent">@color/gamdBackgroundColorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/gamdPrimaryColor</item>
        <item name="colorPrimaryDark">@color/gamdPrimaryDark</item>
        <item name="colorAccent">@color/gamdBackgroundColorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/gamdBackgroundColor</item>
    </style>

    <style name="Theme.Gamd" parent="Theme.Base" />

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/gamdPrimaryTextColor</item>
        <item name="colorControlHighlight">@color/gamdBackgroundColor</item>
        <item name="android:actionMenuTextColor">@color/gamdPrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/gamdPrimaryTextColor</item>
        <item name="android:background">@color/gamdPrimaryBackgroundColor</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/gamdPrimaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
